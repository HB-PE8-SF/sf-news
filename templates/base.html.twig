<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <title>
      {% block title %}
        PE8 News
      {% endblock %}
    </title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>" />
    {% block stylesheets %}

    {% endblock %}

    {% block javascripts %}
      {% block importmap %}
        {{ importmap('app') }}
      {% endblock %}
    {% endblock %}
  </head>
  <body class="bg-slate-200 dark:bg-slate-900 text-gray-900 dark:text-gray-200">
    <header>
      {% block nav %}
        {{ include('nav.html.twig') }}
      {% endblock %}
    </header>

    <main class="max-w-[1000px] mx-auto">
      {# MESSAGES FLASH #}
      {% for type, messages in app.flashes(['success', 'error']) %}
        {% for message in messages %}
          <div class="px-6 py-3 mb-3 text-white {{ type == 'success' ? 'bg-green-600' : 'bg-red-600' }}">{{ message }}</div>
        {% endfor %}
      {% endfor %}
      {# MESSAGES FLASH #}

      {% block body %}

      {% endblock %}
    </main>
  </body>
</html>
