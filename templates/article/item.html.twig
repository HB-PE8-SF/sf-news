{% extends 'base.html.twig' %}

{% block title %}
  {{ article.title }}
{% endblock %}

{% block body %}
  <h1 class="text-center text-5xl">{{ article.title }}</h1>

  <div class="my-8 text-center">
    <span class="bg-orange-600 text-white px-4 py-2 uppercase text-xl">{{ article.category.name }}</span>
  </div>

  <div class="mx-auto max-w-[1000px]">
    {% if article.cover is not null %}
      <div class="flex justify-center my-12">
        <img src="/uploads/articles/{{ article.cover }}" alt="{{ article.title }}" />
      </div>
    {% else %}
      {# Image par d√©faut #}
    {% endif %}

    <div class="mb-8 text-center">
      <span class="bg-blue-700 dark:bg-blue-900 text-white rounded-lg px-2 py-1">{{ article.createdAt|date('d/m/Y') }}</span>
    </div>

    <div class="mb-12 max-w-[800px] text-xl mx-auto text-justify">{{ article.content }}</div>

    {% if article.images is not empty %}
      {% for image in article.images %}
        <div>
          <img src="/uploads/articles/{{ image.filename }}" alt="{{ image.filename }}" />
        </div>
      {% endfor %}
    {% endif %}
  </div>
{% endblock %}
