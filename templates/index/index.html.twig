{% extends 'base.html.twig' %}

{% block title %}
  {{ parent() }} - Derniers articles
{% endblock %}

{% block body %}
  <h1 class="text-center text-5xl mb-8">HB News</h1>

  <h2 class="text-center text-3xl mb-12">Nos derniers articles</h2>

  <div class="grid grid-cols-1 md:grid-cols-2 justify-center gap-8 mb-20">
    {% for article in articles %}
      {{ include('article/card.html.twig', { article: article }) }}
    {% endfor %}
  </div>
{% endblock %}
