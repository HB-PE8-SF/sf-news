{% extends 'base.html.twig' %}

{% block title %}
  Hello CategoriesController!
{% endblock %}

{% block body %}
  <h1 class="text-center text-5xl mb-12">Cat√©gories</h1>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 gap-y-20">
    {% for category in categories %}
      <div class="text-center shadow-2xl py-8 hover:scale-110 dark:hover:bg-slate-800 transition-all">
        <p class="text-6xl mb-8">
          <a href="{{ path('app_category_item', { id: category.id }) }}">{{ category.emoji }}</a>
        </p>
        <h3 class="text-2xl uppercase font-bold"><a href="{{ path('app_category_item', { id: category.id }) }}">{{ category.name }}</a></h3>
        <p>{{ category.articles|length }} articles</p>
      </div>
    {% endfor %}
  </div>
{% endblock %}
