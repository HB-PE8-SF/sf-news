{% extends 'base.html.twig' %}

{% block title %}
  Hello CategoriesController!
{% endblock %}

{% block body %}
  <h1 class="text-center text-5xl mb-12">Cat√©gories</h1>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 gap-y-20">
    {% for category in categories %}
      <div class="text-center shadow-xl py-8">
        <p class="text-6xl mb-8">{{ category.emoji }}</p>
        <a href="{{ path('app_category_item', { id: category.id }) }}">{{ category.name }}</a> ({{ category.articles|length }} articles)
      </div>
    {% endfor %}
  </div>
{% endblock %}
